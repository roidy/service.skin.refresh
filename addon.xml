<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.skin.refresh" name="Skin Refresh" version="0.0.1" provider-name="roidy">
    <requires>
        <import addon="xbmc.python" version="2.25.0"/>


    </requires>
    <extension point="xbmc.service" library="main.py" start="startup"/>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Monitor a skin for changes and auto refresh it.</summary>
        <description lang="en_GB">Don't you just hate having to manually reload a skin when you're developing. Well now it's automatic.</description>
        <language></language>
        <platform>all</platform>
        <license>MIT</license>
        <forum></forum>
        <website></website>
        <email></email>
        <source>https://github.com/roidy/service.skin.refresh</source>
        <news></news>
        <disclaimer>Use of this addon is at your own risk.</disclaimer>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
